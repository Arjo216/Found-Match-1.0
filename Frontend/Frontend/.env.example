# Environment
NEXT_PUBLIC_APP_ENV=local
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Client-visible API base (your FastAPI backend)
NEXT_PUBLIC_API_URL=http://127.0.0.1:8000

# Supabase: CLIENT (public) values only — these are safe for client use
# NOTE: This must be the HTTP URL and anon key (not the Postgres connection string).
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-public-anon-key

# Stripe (server secrets should NOT be public — these are placeholders for dev)
STRIPE_SIGNING_SECRET=
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_KEY=

# Mapbox (if used in client)
NEXT_PUBLIC_MAPBOX_URL=
NEXT_PUBLIC_MAPBOX_KEY=

# GitHub token (server-only) - do NOT expose via NEXT_PUBLIC_*
GITHUB_ACCESS_TOKEN=
